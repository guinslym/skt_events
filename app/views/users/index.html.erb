<% if can? :manage, @users %>
<h3>Users</h3>
<div class="col-lg-12 square">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Registered</th>
        <th>Role</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= 
            #link_to user.name, user 
            %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= user.created_at.to_date %>
          </td>
          <td>
            <%= 
            #user.roles.first.name.titleize unless user.roles.first.nil? 
            %>
          </td>
          <td>

            <a class="btn btn-mini" data-toggle="modal" href="#role-options-<%= user.id %>" type="button">Change role</a>
            <%= render user %>
          </td>
          <td>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% else %>
<script type="text/javascript">
    window.location.href="/home/index"  // put your correct path in a string here
</script>

<% end %>