<div class="row">
	<div class="col-lg-12 ">
		

		<h2 form-title class="form-title">Sign in</h2>

<%= form_for(resource, :as => resource_name ,:url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, :class => "label" %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, :class => "label" %><br />
  <%= f.password_field :password , :class => "show-pass-reset" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-info" %></div>
  <%= render "devise/shared/links" %>
<% end %>




	</div>
</div>

